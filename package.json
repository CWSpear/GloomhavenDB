{
  "name": "gloomhavendb",
  "description": "Gloomhaven DB",
  "author": "CWSpear <cameron@matchbooklab.com>",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "node dist/server/main.js",
    "start:dev": "npm run webpack:server:once && npm-run-all --parallel start:client webpack:server start:server:hmr",
    "start:client": "ng serve --configuration hmr --host 0.0.0.0",
    "start:server": "nodemon --watch ./src/server --watch shared --ext ts --exec 'npm run start:server:once'",
    "start:server:once": "ts-node --project ./src/server/tsconfig.server.json -r tsconfig-paths/register ./src/server/main.ts",
    "start:server:hmr": "node ./dist/server-hot/server",
    "start:server:dev": "npm run webpack:server:once && npm-run-all --parallel webpack:server start:server:hmr",
    "build:client": "ng build",
    "build:prod:client": "ng build --prod --aot",
    "build:prod:universal": "ng run gloomhavendb:universal",
    "build:prod:server": "tsc --project src/server/tsconfig.server.json",
    "build:prod": "npm run clean && npm-run-all --parallel build:prod:**",
    "test": "npm run test:client:cov && npm run test:server:cov",
    "test:client": "jest --config src/client/jest.config.js",
    "test:client:cov": "npm run test:client -- --coverage",
    "test:server": "jest --config src/server/jest.config.js",
    "test:server:integration": "jest --runInBand --config src/server/jest.config.integration.js",
    "test:server:integration:cov": "npm run test:server:integration -- --coverage",
    "test:server:cov": "npm run test:server -- --coverage",
    "webpack:server": "webpack --config webpack.config.js",
    "webpack:server:once": "npm run clean && (NO_WATCH=1 webpack --config webpack.config.js || exit 0)",
    "mailhog": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up mailhog",
    "clean": "rm -rf dist/server",
    "lint": "ng lint",
    "e2e": "(cd e2e && npm test)",
    "e2e:dev": "(cd e2e && npm run test:dev)",
    "format": "prettier --list-different --write \"{src,e2e}/**/*.{ts,html,scss}\"",
    "format:quick": "pretty-quick --staged --pattern \"{src,e2e}/**/*.{ts,html,scss}\"",
    "format:ci": "prettier --check \"{src,e2e}/**/*.{ts,html,scss}\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.2.13",
    "@angular/common": "^7.2.13",
    "@angular/compiler": "^7.2.13",
    "@angular/core": "^7.2.13",
    "@angular/forms": "^7.2.13",
    "@angular/http": "^7.2.13",
    "@angular/platform-browser": "^7.2.13",
    "@angular/platform-browser-dynamic": "^7.2.13",
    "@angular/platform-server": "^7.2.13",
    "@angular/pwa": "^0.13.8",
    "@angular/router": "^7.2.13",
    "@angular/service-worker": "^7.2.13",
    "@nestjs/common": "^6.1.1",
    "@nestjs/core": "^6.1.1",
    "@nestjs/jwt": "^6.0.0",
    "@nestjs/ng-universal": "^1.0.2",
    "@nestjs/passport": "^6.0.0",
    "@nestjs/platform-express": "^6.1.1",
    "@nestjs/typeorm": "^6.0.0",
    "@nguniversal/common": "^7.1.1",
    "@nguniversal/express-engine": "^7.1.1",
    "@nguniversal/module-map-ngfactory-loader": "^7.1.1",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "compression": "^1.7.4",
    "core-js": ">=2.6.5 <3.0.0",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-rate-limit": "^3.4.1",
    "forcedomain": "^1.0.1",
    "helmet": "^3.16.0",
    "lodash": "^4.17.11",
    "nodemailer": "^6.1.0",
    "nodemailer-sparkpost-transport": "^2.2.0",
    "normalize.css": "^8.0.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.10.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.4.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typeorm": "^0.2.16",
    "zone.js": "^0.9.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.8",
    "@angular/cli": "^7.3.8",
    "@angular/compiler-cli": "^7.2.13",
    "@angular/language-service": "^7.2.13",
    "@angularclass/hmr": "^2.1.3",
    "@nestjs/testing": "^6.1.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "0.0.36",
    "@types/express": "^4.16.1",
    "@types/express-rate-limit": "^3.3.0",
    "@types/helmet": "0.0.43",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/node": "^11.13.5",
    "@types/nodemailer": "^4.6.7",
    "@types/passport-jwt": "^3.0.1",
    "@types/supertest": "^2.0.7",
    "@types/yargs": "^13.0.0",
    "codelyzer": "^5.0.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "jest-preset-angular": "^7.1.0",
    "nodemon": "^1.18.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "prettylint": "^1.0.0",
    "protractor": "^6.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.16.0",
    "typescript": ">=3.2.4 <3.3.0",
    "webpack-cli": "^3.3.0",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:quick"
    }
  }
}
