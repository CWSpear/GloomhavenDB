{
  "compilerOptions": {
    "rootDir": "../",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "../../dist",
    "baseUrl": "./",
    "skipLibCheck": true
  },
  "include": [
    "../server",
    "../shared"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.helper.ts"
  ]
}
